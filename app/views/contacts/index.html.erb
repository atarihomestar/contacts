<header>
  <h1>Contacts</h1>
</header>
<%= link_to 'Add Contact', new_contact_path %>


<% if @contacts.any? %>
  <table>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone Number</th>
    </tr>

    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address %></td>
        <td><%= contact.phone_number %></td>
      </tr>
    <% end %>
</table>
<% end %>
